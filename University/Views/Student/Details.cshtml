@model Student
@{
    //ViewBag.Title = "Details";
    ViewBag.Title = nameof(University.Controllers.StudentController.Details);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>
    <tr>
        <td>@Model.FirstName @Model.LastName&nbsp;&nbsp;</td>
        <td>@Html.ActionLink(("Edit"), "Edit", "Student", new { id = Model.Id }, null)</td>
    </tr>
    <tr>
        <td>Faculty:</td>
        <td>@Html.ActionLink((@Model.Group.Cours.Name), "Details", "Course", new { id = Model.Group.Cours.Id }, null)</td>
    </tr>
    <tr>
        <td>Group:</td>
        <td>@Html.ActionLink((@Model.Group.Name), "Details", "Group", new { id = Model.Group.Id }, null)</td>
    </tr>
</table>