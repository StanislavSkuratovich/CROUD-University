        //sb.Insert(sb.Length, ' ');
        //sb.Insert(sb.Length, ' ');
        //sb.Append(item.LastName);
        string student = string.Format("{0}{1}{2}", item.FirstName, "  ", item.LastName);
    <tr style="" class="tab-content">
        @*<td>@Ajax.ActionLink(student, "Details", "Student", new { id = item.Id }, null)</td>*@
        <td>@Ajax.ActionLink(sb.ToString(), "Details", "Student", new { id = item.Id }, null)</td>
        @*<td><a href="@Url.Action("Details", "Student", new { id = item.Id }, null)"><span>@str</span></a></td>*@
        <td style=""> @Ajax.ActionLink("Edit", "Edit", "Student", new { id = item.Id }, null)</td>
