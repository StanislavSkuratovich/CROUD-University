    <caption>Existing students</caption>
    <tr class="card-title" style=" background: linear-gradient(#49708f, #293f50);">
        <th scope="col">Student name</th>
        <th scope="col">Edit student</th>
        <th scope="col">Delete student</th>
    </tr>
    
    @Html.ActionLink("Add new student", "New", null, new { @style = "color:#7CFC00;" })
