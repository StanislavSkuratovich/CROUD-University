@model University.VewModels.GroupFormCreateModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Group"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Group.Name)
        @Html.TextBoxFor(m => m.Group.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Group.Cours)
        @Html.DropDownListFor(m => m.Group.CourseId, new SelectList(Model.Courses, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.CourseId)

        @if (Model.Group != null)
        {
            @Html.HiddenFor(p => p.Group.Id)
        }

    </div>

    

    <button type="submit" , class="btn btn-primary">save</button>
}


